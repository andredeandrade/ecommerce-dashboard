generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String  @id @default(uuid())
  isActive    Boolean @default(true)
  name        String
  description String?

  price            Decimal  @db.Decimal(10, 2)
  promotionalPrice Decimal? @db.Decimal(10, 2)
  sku              String?  @unique
  quantity         Int?

  seoTitle       String?
  seoDescription String?

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  brandId String?
  brand   Brand?  @relation(fields: [brandId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

model Category {
  id       String  @id @default(uuid())
  name     String
  slug     String  @unique
  isActive Boolean @default(true)

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categories")
}

model Brand {
  id       String  @id @default(uuid())
  name     String
  slug     String  @unique
  isActive Boolean @default(true)

  ownerId String
  owner   Profile @relation(fields: [ownerId], references: [id])

  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("brands")
}

enum Role {
  USER
  ADMIN
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique

  name      String?
  storeName String?
  storeSlug String? @unique
  isActive  Boolean @default(true)

  role Role @default(USER)

  products   Product[]
  categories Category[]
  brands     Brand[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}
